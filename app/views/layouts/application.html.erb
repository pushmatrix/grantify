<!DOCTYPE html>
<html>
<head>
  <title>Grantify</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id='navbar'>
	<div class='content'>
		<div id='logo'>Grantify</div>
		<%-if !user_signed_in?%>
			<a href=""><div class='tab selected'>View Applications</div></a>
			<a href=""><div class='tab'>Create Application</div></a>
			<%=link_to "<div class='resource'>Logout</div>".html_safe,destroy_user_session_path%>
			<%=link_to "<div class='resource'>Settings</div>".html_safe,destroy_user_session_path%>
		<%end-%>
	</div>
</div>

<div id='banner'>
	<div class='content'>
		<h1><%=yield :header%></h1>
		<span id='contact_info'>
			Questions or Problems?
			<br />
			Call 1-800-623-HELP
		</span>
	</div>
</div>

<div id='main_container'>
	<div class='content'>
		<%= yield %>
	</div>
</div>

<div id='footer'>
		<span><%=link_to 'Terms of Use',""%></span> | 
		<span><%=link_to 'Privacy',""%></span> | 
		<span><%=link_to 'Contact',""%></span>
</div>

</body>
</html>
